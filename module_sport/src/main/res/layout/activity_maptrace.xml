<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:focusable="true"/>

    <RelativeLayout
        android:id="@+id/start_visible2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@color/bg_white"
        android:clickable="true"
        >
        <ImageView
            android:id="@+id/start_slide"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@mipmap/slidedown_pressed"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/start_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/share"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/start_slide"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/start_ly1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/start_slide"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/start_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公里"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="bottom"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="运动时间"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="配速"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="热量"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/start_speed"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/start_hot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_gravity="bottom"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="千卡"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="bottom"
                        />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/start_ly4"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/background"
                android:layout_margin="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/start_ly2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/start_slide"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/start_km2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公里"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="bottom"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运动时间"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/start_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/start_ly3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_ly1"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:visibility="visible"
            >

            <Button
                android:id="@+id/start_stop"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_stop"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/start_play"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_play"
                android:layout_marginStart="20dp"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/start_pause"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_pause"
                />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/progressBarRl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:text="GPS信号连接中，请稍后..." />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:layout_toLeftOf="@id/info"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/start_num_v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/carrot"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/start_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="150sp"
            android:textStyle="bold"
            android:textColor="@color/bg_white"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</RelativeLayout>